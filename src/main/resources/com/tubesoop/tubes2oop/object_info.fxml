<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.Pane?>
<AnchorPane fx:id="StatusCard" prefHeight="300.0" prefWidth="600.0" style="-fx-background-radius: 10;" styleClass="objectInfoBackground" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tubesoop.tubes2oop.ObjectInfoController">
   <children>

      <!-- Nama Item -->
      <Label layoutX="260.0" layoutY="26.0" fx:id="Nama">
         <font>
            <Font name="Book Antiqua" size="20.0" />
         </font>
      </Label>

      <!-- Gambar Item -->
      <ImageView fx:id="ImagePath" fitHeight="150.0" fitWidth="150.0" layoutX="404.0" layoutY="75.0" pickOnBounds="true" preserveRatio="true" styleClass="glassBackground">

      </ImageView>

      <!-- Back Button  -->
      <Button fx:id="BackButton" layoutX="24.0" layoutY="26.0" mnemonicParsing="false" styleClass="panenButton" stylesheets="@style.css" text="Back" onAction="#closeInfoCard">
         <font>
            <Font name="Book Antiqua" size="12.0" />
         </font>
      </Button>

      <!-- Kategori -->
      <Label fx:id="Kategori" layoutX="24.0" layoutY="63.0">
         <font>
            <Font name="Book Antiqua" size="18.0" />
         </font>
      </Label>

      <!-- Berat atau Umur -->
      <Label fx:id="BeratOrUmur" layoutX="24.0" layoutY="80.0">
         <font>
            <Font name="Book Antiqua" size="18.0" />
         </font>
      </Label>

      <!-- Berat Panen atau Durasi Panen -->
      <Label fx:id="Panen" layoutX="24.0" layoutY="117.0">
         <font>
            <Font name="Book Antiqua" size="18.0" />
         </font>
      </Label>

      <!-- Item Aktif -->
      <Pane layoutX="24.0" layoutY="154.0" >
         <Label text="Item Aktif : ">
            <font>
               <Font name="Book Antiqua" size="18.0" />
            </font>
         </Label>
         <HBox fx:id="ItemAktif" spacing="10" layoutY="30.0"> <!-- Perbaikan: Menggunakan VBox untuk tata letak vertikal -->
            <!-- Gambar-gambar akan ditambahkan di sini -->
         </HBox>
      </Pane>

      <!-- Panen Button -->
      <Button fx:id="PanenButton" onAction="#panenKartu" layoutX="237.0" layoutY="250.0" mnemonicParsing="false" styleClass="panenButton" stylesheets="@style.css" text="Panen">
         <font>
            <Font name="Book Antiqua" size="12.0" />
         </font>
      </Button>

   </children>
</AnchorPane>
