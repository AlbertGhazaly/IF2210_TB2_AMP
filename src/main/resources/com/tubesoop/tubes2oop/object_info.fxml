<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="StatusCard" prefHeight="300.0" prefWidth="600.0" style="-fx-background-radius: 10;" styleClass="objectInfoBackground" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tubesoop.tubes2oop.ObjectInfoController">
   <children>

      <!-- Nama Item -->
      <Label layoutX="275.0" layoutY="26.0">
         <font>
            <Font name="Book Antiqua" size="20.0" />
         </font>
      </Label>

      <!-- Gambar Item -->
      <ImageView fitHeight="150.0" fitWidth="150.0" layoutX="404.0" layoutY="75.0" pickOnBounds="true" preserveRatio="true" styleClass="glassBackground" />

      <!-- Back Button  -->
      <Button layoutX="24.0" layoutY="26.0" mnemonicParsing="false" styleClass="backButton" stylesheets="@style.css" text="Back" onAction="#closeInfoCard">
         <font>
            <Font name="Book Antiqua" size="12.0" />
         </font>
      </Button>

      <!-- Berat atau Umur -->
      <Label layoutX="24.0" layoutY="120.0">
         <font>
            <Font name="Book Antiqua" size="18.0" />
         </font>
      </Label>

      <!-- Item Aktif -->
      <Label layoutX="24.0" layoutY="157.0" text="Item Aktif : ">
         <font>
            <Font name="Book Antiqua" size="18.0" />
         </font>
      </Label>

      <!-- Panen Button -->
      <Button layoutX="237.0" layoutY="250.0" mnemonicParsing="false" styleClass="panenButton" stylesheets="@style.css" text="Panen">
         <font>
            <Font name="Book Antiqua" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
