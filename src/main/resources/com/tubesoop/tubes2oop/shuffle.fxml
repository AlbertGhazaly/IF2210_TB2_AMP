         <font>
            <Font name="Book Antiqua" size="16.0" />
         </font>
      </Button>
      <Button fx:id="shuffleButton1" layoutX="448.0" layoutY="244.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="125.0" styleClass="shuffleButton" stylesheets="@style.css" text="Finish" onAction="#handleFinish">
